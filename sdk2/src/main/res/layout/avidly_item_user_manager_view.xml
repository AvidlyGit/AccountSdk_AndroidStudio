<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/avidly_user_guest_listview_item_height"
              android:background="@drawable/avidly_account_item_selector"
              android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/avidly_user_manager_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/avidly_user_guest_listview_item_marginleft"
            android:textColor="@color/avidly_color_common_text_black"
            android:textSize="16sp"
            />

        <ImageView
            android:id="@+id/avidly_user_manager_item_icon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/avidly_user_guest_listview_item_marginright"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/avidly_guest_bind_item_top_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="@color/avidly_color_common_line_gray"/>

        <ImageView
            android:id="@+id/avidly_guest_bind_item_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/avidly_color_common_line_gray"/>

        <ImageView
            android:id="@+id/avidly_guest_bind_item_right_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/avidly_color_common_line_gray"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>
