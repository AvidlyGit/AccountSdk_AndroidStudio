<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/avidly_color_white"
             android:orientation="vertical">

    <include
        layout="@layout/avidly_user_manager_common_avidly_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/avidly_user_manager_common_avidly_image_margin_top2"
        android:layout_gravity="top"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/avidly_useraccount_bind_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:layout_marginTop="@dimen/avidly_user_manager_bind_listview_margin_top"/>

</FrameLayout>
