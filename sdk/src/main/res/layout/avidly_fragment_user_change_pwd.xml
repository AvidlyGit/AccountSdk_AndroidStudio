<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/avildy_color_white"
             android:orientation="vertical">

    <include
        layout="@layout/avidly_user_manager_common_avidly_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="@dimen/avidly_user_manager_pwd_margintop"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/avidly_user_manager_pwd_marginbottom"
        android:orientation="vertical">

        <EditText
            android:id="@+id/avidly_editor_chagne_old_pwd"
            android:layout_width="@dimen/avidly_user_account_editor_width"
            android:layout_height="@dimen/avidly_user_account_editor_height"
            android:background="@drawable/avidly_editor_change_pwd_stroke"
            android:digits="@string/avildy_editor_number_letter_digits"
            android:hint="@string/avidly_string_userpwd_alter_old_hit"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:lines="1"
            android:maxLength="16"
            android:maxLines="1"
            android:minHeight="30dp"
            android:paddingLeft="@dimen/avidly_user_account_editor_padding_left_or_rigjt"
            android:paddingRight="@dimen/avidly_user_account_editor_padding_left_or_rigjt"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/avidly_edit_cusor_black"
            android:textSize="16sp"
            />

        <EditText
            android:id="@+id/avidly_editor_chagne_new_pwd"
            android:layout_width="@dimen/avidly_user_account_editor_width"
            android:layout_height="@dimen/avidly_user_account_editor_height"
            android:layout_marginTop="@dimen/avidly_user_account_editor_between_distance"
            android:background="@drawable/avidly_editor_change_pwd_stroke"
            android:digits="@string/avildy_editor_number_letter_digits"
            android:hint="@string/avidly_string_userpwd_alter_new_hit"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:lines="1"
            android:maxLength="16"
            android:maxLines="1"
            android:minHeight="30dp"
            android:paddingLeft="@dimen/avidly_user_account_editor_padding_left_or_rigjt"
            android:paddingRight="@dimen/avidly_user_account_editor_padding_left_or_rigjt"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/avidly_edit_cusor_black"
            android:textSize="16sp"
            />

        <EditText
            android:id="@+id/avidly_editor_chagne_new_pwd2"
            android:layout_width="@dimen/avidly_user_account_editor_width"
            android:layout_height="@dimen/avidly_user_account_editor_height"
            android:layout_marginTop="@dimen/avidly_user_account_editor_between_distance"
            android:background="@drawable/avidly_editor_change_pwd_stroke"
            android:digits="@string/avildy_editor_number_letter_digits"
            android:hint="@string/avidly_string_userpwd_alter_new_hit2"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:lines="1"
            android:maxLength="16"
            android:maxLines="1"
            android:minHeight="30dp"
            android:paddingLeft="@dimen/avidly_user_account_editor_padding_left_or_rigjt"
            android:paddingRight="@dimen/avidly_user_account_editor_padding_left_or_rigjt"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/avidly_edit_cusor_black"
            android:textSize="16sp"
            />

        <Button
            android:id="@+id/avidly_fragment_user_change_pwd_btn"
            android:layout_width="@dimen/avidly_user_account_editor_width"
            android:layout_height="@dimen/avidly_user_account_editor_height"
            android:layout_marginTop="@dimen/avidly_user_account_editor_between_distance"
            android:background="@drawable/avidly_button_oval_red"
            android:gravity="center_vertical"
            android:text="@string/avidly_string_userpwd_alter_btn"
            android:textAlignment="center"
            android:textColor="@color/avildy_color_white"
            android:textSize="@dimen/avidly_dimen_text_size_14sp"
            />

        <!--<android.support.v7.widget.CardView-->
        <!--android:id="@+id/card_title_banner"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="@dimen/avidly_user_account_editor_between_distance"-->
        <!--android:background="@color/avildy_color_white"-->
        <!--app:cardBackgroundColor="#173143"-->
        <!--app:cardCornerRadius="10dp"-->
        <!--app:cardElevation="12dp"-->
        <!--&gt;-->
        <!--</android.support.v7.widget.CardView>-->

    </LinearLayout>

</FrameLayout>
